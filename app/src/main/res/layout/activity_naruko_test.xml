<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">

    <com.hiro_a.naruko.view.BackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/image_chat_background" />

    <FrameLayout
        android:id="@+id/canvasLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/editTextlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clipChildren="false">

        <com.hiro_a.naruko.view.ChatView.ChatCanvasView_userIcon_Line
            android:id="@+id/canvasView_usersLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.hiro_a.naruko.view.ChatView.ChatCanvasView_history
            android:id="@+id/canvasView_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.hiro_a.naruko.view.ChatView.ChatCanvasView
            android:id="@+id/canvasView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/narukoRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hiro_a.naruko.view.NarukoUserIconPopoutView
                android:id="@+id/icon_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/button_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/button_reset"
                android:text="Start" />

            <Button
                android:id="@+id/button_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Reset" />
        </RelativeLayout>

        <com.hiro_a.naruko.view.ChatView.ChatCanvasView_userIcon_outerCircle
            android:id="@+id/canvasView_userIcon_outerCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.hiro_a.naruko.view.ChatView.ChatCanvasView_impassive
            android:id="@+id/canvasView_impassive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/editTextlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/chatUILayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_chat_edittext_top">

        <EditText
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/background_chat_edittext_style"
            android:fontFamily="@android:asset"
            android:cursorVisible="false"
            android:ems="10" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/chatUILayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_chat_edittext_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <include
                android:id="@+id/chat_ui"
                layout="@layout/ui_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tint="#ffffff"
                app:srcCompat="@android:drawable/sym_action_chat" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>