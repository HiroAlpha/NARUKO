<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/naruko_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:background="@drawable/edittext_test_style"
        android:gravity="center_vertical"
        android:text="NARUKO Icon"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.hiro_a.naruko.item.SelectorItem
            android:id="@+id/loginSelector_Twitter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_select_style"
            android:backgroundTint="#1DA1F2"
            app:selectorImage="@drawable/image_twitter_logo_blue"
            app:selectorText="Twitterでログイン">

        </com.hiro_a.naruko.item.SelectorItem>

        <com.hiro_a.naruko.item.SelectorItem
            android:id="@+id/loginSelector_Email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_select_style"
            android:backgroundTint="#FF6600"
            app:selectorImage="@drawable/ic_email_black_24dp"
            app:selectorText="メールアドレスでログイン" >

        </com.hiro_a.naruko.item.SelectorItem><![CDATA[

        "/>

        ]]>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/makeAccout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>